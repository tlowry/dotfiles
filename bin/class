#!/bin/sh
# create a c++ .h & .cpp class given a class name
GLOBALS=""
function glob() {
 GLOBALS=$GLOBALS" -D $1=$2"
}

[ -z "$1" ] && echo "No class name supplied" && exit 1

glob FILE_NAME "$1"
glob USER_NAME "tlowry"
glob COMPANY_NAME "github.com/tlowry"
glob VERSION_NO 2.2

echo "GLOBALS $GLOBALS"

python2 cog -o $1.h -d $GLOBALS $HOME/.local/bin/cog_header_template.py
python2 cog -o $1.cpp -d $GLOBALS $HOME/.local/bin/cog_class_template.py
